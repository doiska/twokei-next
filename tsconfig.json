{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*"
  ],
}